@model Web.Areas.Store.ViewModels.PaginatedResult<Web.Models.Product>

@if (Model.TotalPages > 1)
{
    var category = Context.Request.Query["category"].ToString();

    <div class="pagination-wrapper centred">
        <ul class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <li>
                    <a asp-controller="Shop" 
                       asp-action="Index" 
                       asp-area="Store"
                       asp-route-pageNumber="@(Model.CurrentPage - 1)"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-category="@category">
                        Prev
                    </a>
                </li>
            }

            @{
                var startPage = Math.Max(1, Model.CurrentPage - 2);
                var endPage = Math.Min(Model.TotalPages, startPage + 4);
                startPage = Math.Max(1, endPage - 4);
            }

            @if (startPage > 1)
            {
                <li>
                    <a asp-controller="Shop" 
                       asp-action="Index" 
                       asp-area="Store"
                       asp-route-pageNumber="1"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-category="@category">1</a>
                </li>
                if (startPage > 2)
                {
                    <li><span>...</span></li>
                }
            }

            @for (var i = startPage; i <= endPage; i++)
            {
                <li class="@(i == Model.CurrentPage ? "active" : "")">
                    <a asp-controller="Shop" 
                       asp-action="Index" 
                       asp-area="Store"
                       asp-route-pageNumber="@i"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-category="@category">@i</a>
                </li>
            }

            @if (endPage < Model.TotalPages)
            {
                if (endPage < Model.TotalPages - 1)
                {
                    <li><span>...</span></li>
                }
                <li>
                    <a asp-controller="Shop" 
                       asp-action="Index" 
                       asp-area="Store"
                       asp-route-pageNumber="@Model.TotalPages"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-category="@category">@Model.TotalPages</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li>
                    <a asp-controller="Shop" 
                       asp-action="Index" 
                       asp-area="Store"
                       asp-route-pageNumber="@(Model.CurrentPage + 1)"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-category="@category">
                        Next
                    </a>
                </li>
            }
        </ul>
    </div>
}
