@model IEnumerable<Web.Models.Product>
@{
    ViewData["Title"] = "Product List";
}

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
        <div>
          <h4 class="mb-3">Product List</h4>
          <p class="mb-0">
            The product list effectively dictates product presentation
            and provides space<br />
            to list your products and offering in the most appealing
            way.
          </p>
        </div>
        <a asp-area="POS" asp-controller="Product" asp-action="Create" class="btn btn-primary add-list">
          <i class="las la-plus mr-3"></i>Add Product
        </a>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="table-responsive rounded mb-3">
        <table class="data-tables table mb-0 tbl-server-info">
          <thead class="bg-white text-uppercase">
            <tr class="ligth ligth-data">
              <th>
                
              </th>
              <th>Product</th>
              <th>SKU</th>
              <th>Category</th>
              <th>Price</th>
              <th>Cost</th>
              <th>Quantity</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody class="ligth-body">
            @foreach (var product in Model)
            {
              <tr>
                <td>
                 
                </td>
                <td>
                  <div class="d-flex align-items-center">
                    <img src="@product.Thumbnail" class="img-fluid rounded avatar-50 mr-3" alt="@product.Name" />
                    <div>
                      @product.Name
                      <p class="mb-0">
                        <small class="text-truncate d-inline-block" style="max-width: 200px;" title="@product.Description">@product.Description</small>
                      </p>
                    </div>
                  </div>
                </td>
                <td>@product.Sku</td>
                <td>@(product.Category?.Name ?? "N/A")</td>
                <td>$@product.Price.ToString("F2")</td>
                <td>$@product.CostPrice.ToString("F2")</td>
                <td>@product.StockQuantity</td>
                <td>
                  <div class="d-flex align-items-center list-action">
                    <a asp-area="POS" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" 
                        class="btn btn-info mr-2" data-toggle="tooltip" data-placement="top" title="View">
                      <i class="ri-eye-line mr-0"></i>
                    </a>
                    <a asp-area="POS" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" 
                        class="btn btn-success mr-2" data-toggle="tooltip" data-placement="top" title="Edit">
                      <i class="ri-pencil-line mr-0"></i>
                    </a>
                    <a href="javascript:void(0)" onclick="deleteProduct('@product.Id')" 
                        class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Delete">
                      <i class="ri-delete-bin-line mr-0"></i>
                    </a>
                  </div>
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- Page end  -->
</div>
<!-- Modal Edit -->
<div class="modal fade" id="edit-note" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="popup text-left">
          <div class="media align-items-top justify-content-between">
            <h3 class="mb-3">Product</h3>
            <div class="btn-cancel p-0" data-dismiss="modal">
              <i class="las la-times"></i>
            </div>
          </div>
          <div class="content edit-notes">
            <div class="card card-transparent card-block card-stretch event-note mb-0">
              <div class="card-body px-0 bukmark">
                <div class="d-flex align-items-center justify-content-between pb-2 mb-3 border-bottom">
                  <div class="quill-tool"></div>
                </div>
                <div id="quill-toolbar1">
                  <p>
                    Virtual Digital Marketing Course every week on
                    Monday, Wednesday and Saturday.Virtual Digital
                    Marketing Course every week on Monday
                  </p>
                </div>
              </div>
              <div class="card-footer border-0">
                <div class="d-flex flex-wrap align-items-ceter justify-content-end">
                  <div class="btn btn-primary mr-3" data-dismiss="modal">
                    Cancel
                  </div>
                  <div class="btn btn-outline-primary" data-dismiss="modal">
                    Save
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <script>
        function deleteProduct(id) {
            if (confirm('Are you sure you want to delete this product?')) {
                $.ajax({
                    url: '@Url.Action("Delete", "Product", new { area = "POS" })/' + id,
                    type: 'POST',
                    success: function (result) {
                        if (result.success) {
                            location.reload();
                        } else {
                            alert(result.message);
                        }
                    },
                    error: function () {
                        alert('An error occurred while deleting the product.');
                    }
                });
            }
        }
    </script>
}